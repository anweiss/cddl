{
  "comments": {
    "lineComment": ";"
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["<", ">"]
  ],
  "autoClosingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["<", ">"],
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    ["b64'", "'"],
    ["h'", "'"]
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["<", ">"],
    ["'", "'"],
    ["\"", "\""],
    ["b64'", "'"],
    ["h'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*(\\{|\\[|\\()\\s*$",
    "decreaseIndentPattern": "^\\s*(\\}|\\]|\\)).*$"
  },
  "folding": {
    "markers": {
      "start": "^\\s*;\\s*#region",
      "end": "^\\s*;\\s*#endregion"
    }
  },
  "wordPattern": "([a-zA-Z_][a-zA-Z0-9_-]*)|(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}
