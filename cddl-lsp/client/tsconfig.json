{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2022",
		"lib": ["es2022"],
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"strict": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}
